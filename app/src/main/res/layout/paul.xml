<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/product_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/color_chocolate"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title"
                style="@style/nom_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Nom Article " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_brands"
                    style="@style/nom_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Marque " />

                <TextView
                    android:id="@+id/product_quantity"
                    style="@style/nom_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="QTY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/nom_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Catégorie : " />

                <TextView
                    android:id="@+id/product_categories"
                    style="@style/nom_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Légume " />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/product_description"
            style="@style/nom_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Decription : Lorem ipsum
dolor sit amet, consectetur adipiscing elit. " />

        <TextView
            android:id="@+id/product_packagings"
            style="@style/nom_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Packaging : Plastique" />

        <TextView
            android:id="@+id/product_labels"
            style="@style/nom_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Labels : Sans Gluten" />

        <TextView
            android:id="@+id/product_traces"
            style="@style/nom_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Traces : Oeufs" />

        <TextView
            android:id="@+id/product_allergens"
            style="@style/nom_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Allergens : Pollen" />

        <TextView
            android:id="@+id/product_ingredients"
            style="@style/nom_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Ingrédients : Lorem ipsum
dolor sit amet, consectetur adipiscing elit. " />


    </LinearLayout>

    <TableLayout
        android:id="@+id/product_nutriments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TableRow
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="Nutrition facts" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:text="As sold for 100g/100ml" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:text="As sold/serving" />
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="Energy" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/energy_as_sold_for_100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/energy_as_sold_per_serving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="Fat" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/fat_as_sold_for_100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/fat_as_sold_per_serving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="Saturated Fat" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/saturated_fat_as_sold_for_100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/saturated_fat_as_sold_per_serving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="Trans Fat"    />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/trans_fat_as_sold_for_100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/trans_fat_as_sold_per_serving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="Cholesterol" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/cholesterol_as_sold_for_100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/cholesterol_as_sold_per_serving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:text="Carbohydrates" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/carbohydrates_as_sold_for_100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="2" />

            <TextView
                android:background="@drawable/border"
                style="@style/tableau"
                android:id="@+id/carbohydrates_as_sold_per_serving"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>