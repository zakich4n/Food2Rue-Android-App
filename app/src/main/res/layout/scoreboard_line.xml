<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/score_line"
        android:orientation="horizontal"
       >


        <TextView
            android:id="@+id/textview_score_position"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="Partie 1 :"
            android:textColor="@color/white"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="19dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_score_note"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:fontFamily="@font/bungee"
                android:text="13/20"
                android:textColor="@color/white"
                android:textSize="35dp"></TextView>

            <TextView
                android:id="@+id/textview_score_date"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee"
                android:text="22/02/2022"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="0dp"></TextView>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>